<div class="clear"></div>
  <div class="container main-container">
    <div class="row">
      <div class="col-sm-12 col-md-12 margin-under-header">
          <%- flash.each do |name, msg| -%>
            <div <% if name == :alert %> class="alert alert-danger" <% else %> class="alert alert-success" <% end %>>
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <%= content_tag :div, msg %>
            </div>
          <%- end -%>
    </div>
  </div>
</div>