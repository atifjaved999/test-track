<h1>Listing notifications</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.name %></td>
        <td><%= link_to 'Show', [:admin,notification] %></td>
        <td><%= link_to 'Edit', edit_admin_notification_path(notification) %></td>
        <td><%= link_to 'Destroy', [:admin,notification], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notification', new_admin_notification_path %>
