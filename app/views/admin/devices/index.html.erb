<p id="notice"><%= notice %></p>

<h1>Listing Devices</h1>

<table border="1">
  <thead>
    <tr>
      <th>Device ID</th>
      <th>Imei no</th>
      <th>Device type</th>
      <th>Sim no</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.id %></td>
        <td><%= device.imei_no %></td>
        <td><%= device.device_type %></td>
        <td><%= device.sim_no %></td>
        <td><%= device.user_id %></td>
        <td><%= link_to 'Show', admin_device_path(device) %></td>
        <td><%= link_to 'Edit', edit_admin_device_path(device) %></td>
        <td><%= link_to 'Destroy', admin_device_path(device), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

